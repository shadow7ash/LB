{
  "name": "telegram-leech-bot",
  "description": "A Telegram bot for downloading files via direct links.",
  "repository": "https://github.com/yourusername/telegram-leech-bot",
  "keywords": ["telegram", "bot", "leech", "download"],
  "env": {
    "TOKEN": {
      "description": "Telegram bot token",
      "required": true
    },
    "OWNER_ID": {
      "description": "Owner's Telegram user ID",
      "required": true
    },
    "MONGODB_URI": {
      "description": "MongoDB Atlas connection URI",
      "required": true
    }
  },
  "addons": [
    "mongodb-atlas"
  ],
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "free"
    }
  },
  "scripts": {
    "postdeploy": "python bot.py"
  }
}
